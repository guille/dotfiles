#!/usr/bin/env bash
# shellcheck disable=SC1091

set -e

source "$SCRIPT_BASE_DIR/common"

##
# Ruby
##

module_name=ruby


mise settings add idiomatic_version_file_enable_tools ruby

prepare_profiled_config "default-gems"

##
# Symlinks
##
infoprint "[$module_name] creating dotfiles symlinks..."
ln -sfv "${SCRIPT_BASE_DIR}/$module_name/default-gems" ~/.default-gems 1> /dev/null

mkdir -p "$XDG_CONFIG_HOME/irb"
ln -sfv "${SCRIPT_BASE_DIR}/$module_name/irbrc" "$XDG_CONFIG_HOME/irb/irbrc" 1> /dev/null

# Install after default gems are in the right place
mise use --global ruby@latest
