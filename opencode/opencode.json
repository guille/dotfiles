{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "default_agent": "plan",
  "share": "disabled",
  "autoupdate": "notify",
  "permission": {
    "*": "ask",
    "edit": "allow",
    "glob": "allow",
    "list": "allow",
    "grep": "allow",
    "todowrite": "allow",
    "todoread": "allow",
    "read": {
      "*": "allow",
      "*.env*": "deny"
    },
    "webfetch": "ask",
    "bash": {
      "*": "ask",
      "ls *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "rm *": "deny",
    },
    "external_directory": {
      "*": "deny",
      "/tmp/**": "ask"
    },
  },
  "enabled_providers": [
    "github-copilot",
    "opencode",
  ],
}
