DOTFILES_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/dots"
# echo $DOTFILES_DIR

# zsh
ln -sfv ${DOTFILES_DIR}/zshrc ~/.zshrc 1> /dev/null
ln -sfv ${DOTFILES_DIR}/zprofile ~/.zprofile 1> /dev/null
ln -sfv ${DOTFILES_DIR}/zshenv ~/.zshenv 1> /dev/null
ln -sfv ${DOTFILES_DIR}/zkeys ~/.zkeys 1> /dev/null
ln -sfv ${DOTFILES_DIR}/zaliases ~/.zaliases 1> /dev/null
ln -sfv ${DOTFILES_DIR}/p10k ~/.p10k.zsh 1> /dev/null
ln -sfv ${DOTFILES_DIR}/zsh-history-substring-search.zsh ~/.zhist_substr 1> /dev/null

# git
ln -sfv ${DOTFILES_DIR}/gitconfig ~/.gitconfig 1> /dev/null
ln -sfv ${DOTFILES_DIR}/githelpers ~/.githelpers 1> /dev/null

# sublime
# TODO: on a fresh install it might be `~/.config/sublime-text`??
ln -sfv ${DOTFILES_DIR}/subl_keys ~/.config/sublime-text-3/Packages/User/Default" (Linux)".sublime-keymap 1> /dev/null
ln -sfv ${DOTFILES_DIR}/subl_settings ~/.config/sublime-text-3/Packages/User/Preferences.sublime-settings 1> /dev/null
ln -sfv ${DOTFILES_DIR}/subl_colors ~/.config/sublime-text-3/Packages/User/Agila\ Monokai\ Extended.sublime-color-scheme
ln -sfv ${DOTFILES_DIR}/subl_ruby ~/.config/sublime-text-3/Packages/User/Ruby.sublime-settings 1> /dev/null
ln -sfv ${DOTFILES_DIR}/subl_elixir ~/.config/sublime-text-3/Packages/User/Elixir.sublime-settings 1> /dev/null
ln -sfv ${DOTFILES_DIR}/subl_gitcommit ~/.config/sublime-text-3/Packages/User/Git\ Commit.sublime-settings 1> /dev/null
ln -sfv ${DOTFILES_DIR}/subl_lsp ~/.config/sublime-text-3/Packages/User/LSP.sublime-settings 1> /dev/null
ln -sfv ${DOTFILES_DIR}/ipdb.sublime-snippet ~/.config/sublime-text-3/Packages/User/ 1> /dev/null
ln -sfv ${DOTFILES_DIR}/pry.sublime-snippet ~/.config/sublime-text-3/Packages/User/ 1> /dev/null
ln -sfv ${DOTFILES_DIR}/rdbg.sublime-snippet ~/.config/sublime-text-3/Packages/User/ 1> /dev/null
ln -sfv ${DOTFILES_DIR}/byebug.sublime-snippet ~/.config/sublime-text-3/Packages/User/ 1> /dev/null

# ghostty
mkdir -p ~/.config/ghostty
ln -sfv ${DOTFILES_DIR}/ghostty ~/.config/ghostty/config 1> /dev/null

# sway
mkdir -p ~/.config/sway
ln -sfv ${DOTFILES_DIR}/sway ~/.config/sway/config 1> /dev/null

# waybar
mkdir -p ~/.config/waybar
ln -sfv ${DOTFILES_DIR}/waybar ~/.config/waybar/config 1> /dev/null
ln -sfv ${DOTFILES_DIR}/waybar_styles ~/.config/waybar/style.css 1> /dev/null

# rofi
ln -sfv ${DOTFILES_DIR}/rofi ~/.config/rofi 1> /dev/null

# dunst
mkdir -p ~/.config/dunst
ln -sfv ${DOTFILES_DIR}/dunst ~/.config/dunst/dunstrc 1> /dev/null

# mpd & ncmpcpp
ln -sfv ${DOTFILES_DIR}/mpdconf ~/.mpdconf 1> /dev/null
ln -sfv ${DOTFILES_DIR}/ncmpcpp ~/.ncmpcpp/config 1> /dev/null

# neovim
mkdir -p ~/.config/nvim/colors
ln -sfv ${DOTFILES_DIR}/vimrc ~/.config/nvim/init.vim 1> /dev/null
ln -sfv ${DOTFILES_DIR}/vimcolor ~/.config/nvim/colors/molokai.vim 1> /dev/null

# mpv
mkdir -p ~/.config/mpv
ln -sfv ${DOTFILES_DIR}/mpv ~/.config/mpv/mpv.conf 1> /dev/null
ln -sfv ${DOTFILES_DIR}/mpv_input ~/.config/mpv/input.conf 1> /dev/null
