# Pacman
alias paci='sudo pacman -S'
alias pacu='sudo pacman -Syu'

# Terminal
alias ls='ls -F --color=auto'
alias la='ls -AF --color=auto'
alias ll='ls -AoF --color=auto'
alias top='htop'
alias pgrep='pgrep -l'
alias grep='grep -n --color=auto'
alias df='df -h'
alias du='du -h'
alias cls='clear'
alias calc='bc -q -l'

# Notifications
alias dnd='notify-send "DUNST_COMMAND_PAUSE"'
alias dnd-='notify-send "DUNST_COMMAND_RESUME"'

# App shortcuts
alias g='chromium --process-per-site'
alias subl='subl3'

# Misc
alias snast='sudo nast -i wlan1 -m'
alias starwars='telnet towel.blinkenlights.nl'

# Media functions
#alias twitch='livestream'
alias music='play_music'
alias hdmi='xrandr --output HDMI-1 --auto --same-as eDP-1'
alias tv='~/projects/daily-shows/bin/run'
alias dl='~/projects/daily-shows/bin/dl'

command_exists() {
    type "$1" &> /dev/null ;
}

# Exiting
alias q='exit'
alias bye='sudo shutdown -t 0'

#livestream() {
#  livestreamer twitch.tv/$1 $2||best
#}

play_music() {
	mpd
	ncmpcpp && mpd --kill
}