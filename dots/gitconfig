[credential "https://github.com"]
  username = guille

[core]
  autocrlf = input
  pager = delta

[init]
  defaultBranch = master

[branch]
  sort = -committerdate

[tag]
  sort = -version:refname

[alias]
  st = status
  co = checkout
  di = diff
  dc = diff --cached
  last = show --quiet
  amend = commit --amend
  qamend = commit --amend --no-edit
  pushf = push --force-with-lease
  autosquash = rebase --autosquash
  fixup = commit --fixup
  # Stats
  ds = diff --stat=160,120
  # fancy fzf helper
  cs = "! ~/.githelpers"

[status]
  submoduleSummary = true

[pull]
  rebase = true

[push]
  autoSetupRemote = true
  followtags = true

[rebase]
  autoStash = true
  autosquash = true

[fetch]
  prune = true

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true  # use n and N to move between diff sections
  syntax-theme = Monokai Extended

[merge]
  conflictstyle = zdiff3

[diff]
  colorMoved = default
  algorithm = histogram
  submodule = log

[rerere]
  enabled = true

