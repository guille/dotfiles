/* -----------------------------------------------------------------------------
 * Keyframes
 * -------------------------------------------------------------------------- */

 @keyframes blink-warning {
  70% {
    color: #d9d8d8;
  }

  to {
    color: #d9d8d8;
    background-color: orange;
  }
}

@keyframes blink-critical {
  70% {
    color: #d9d8d8;
  }

  to {
    color: #d9d8d8;
    background-color: red;
  }
}


