#!/usr/bin/env bash

set -e

source "$SCRIPT_BASE_DIR/common"

##
# Git
##

module_name=git


if [[ "${DOTFILES_OS:-}" == "OSX" ]]; then
	infoprint "[$module_name] adding .DS_Store to global gitignore"
	grep -qxF ".DS_Store" ~/.gitignore || echo ".DS_Store" >> ~/.gitignore
fi


infoprint "[$module_name] creating dotfiles symlinks..."
ln -sfv ${SCRIPT_BASE_DIR}/$module_name/gitconfig ~/.gitconfig 1> /dev/null
ln -sfv ${SCRIPT_BASE_DIR}/$module_name/gitconfig-personal ~/.gitconfig-personal 1> /dev/null
ln -sfv ${SCRIPT_BASE_DIR}/$module_name/githelpers ~/.githelpers 1> /dev/null
